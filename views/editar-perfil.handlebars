<main class="contenedor">
    <form action="/editar-perfil" method="post" class="default-form" enctype="multipart/form-data">
        <div class="campo">
            <label for="">Nombre</label>
            <input value={{usuario.nombre}} type="text" name="nombre" id="" placeholder="Tu Nombre" >
        </div>
        <div class="campo">
            <label for="">E-mail</label>
            <input value={{usuario.email}} type="email" name="email" id="" placeholder="Tu E-mail" >
        </div>
        <div class="campo">
            <label for="">Password</label>
            <input type="password" name="password" id="" placeholder="Tu Password" >
        </div>
        <div class="campo">
            <label for="">Imagen de Perfil</label>
            <input type="file" name="imagen">
            <img src="uploads/perfiles/{{usuario.imagen}}" class="admin-perfil">
        </div>
        <div class="campo">
            <input type="submit" value="Guardar Cambios" class="btn btn-azul">
        </div>
    </form>
</main>